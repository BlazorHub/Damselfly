@inject IModalService Modal
@inject NavigationManager NavigationManager
@using Damselfly.Web.Shared;

<div>
    <button title="Config and Tasks" @onclick="@(() => ShowConfigDialog())" class="btn btn-primary"><i class="fa fa-cogs" /></button>
</div>
<div>
    <button title="About Damselfly..." @onclick="@(() => ShowAboutDialog())" class="btn btn-primary"><i class="fa fa-info-circle" /></button>
</div>
@if (false)
{
<div>
    <button title="Upload Images" @onclick="@(() => ShowUploadDialog())" class="btn btn-primary"><i class="fa fa-upload" /></button>
</div>
}

@code
{
    private void ShowUploadDialog()
    {
        try
        {
            NavigationManager.NavigateTo("/Upload");
        }
        catch (Exception ex)
        {
            Logging.LogError("Exception: " + ex.Message);
        }
    }

    private void ShowConfigDialog()
    {
        try
        {
            NavigationManager.NavigateTo("/config");
        }
        catch (Exception ex)
        {
            Logging.LogError("Exception: " + ex.Message);
        }
    }

    private void ShowAboutDialog()
    {
        try
        {
            NavigationManager.NavigateTo("/about");
        }
        catch (Exception ex)
        {
            Logging.LogError("Exception: " + ex.Message);
        }
    }
}
